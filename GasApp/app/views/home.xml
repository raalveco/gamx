<Alloy>
	<Window modal="true" titleid="home_title" id="index">
		<View backgroundColor="#FFF">
			<View id="header">
				<View height="70%">
					<ImageView id="header_image"></ImageView>
				</View>
				<View height="30%" backgroundColor="#123456">
					<TextField id="header_search" />
				</View>
			</View>
			<View id="container">
				<View id="container_inner">
					<ImageView id="container_image"></ImageView>
					<Label id="container_text"></Label>
				</View>
			</View>
			<View id="footer">
				<View id="footer_inner">
					<View class="footer_item">
						<ImageView class="footer_item_image" image="/profile.png"></ImageView>
						<Label textid="index_profile" class="footer_item_text"></Label>
					</View>
					<View class="footer_item">
						<ImageView class="footer_item_image" image="/wingas.png"></ImageView>
						<Label textid="index_wingas" class="footer_item_text"></Label>
					</View>
					<View class="footer_item">
						<ImageView class="footer_item_image" image="/share.png"></ImageView>
						<Label textid="index_share" class="footer_item_text"></Label>
					</View>
					<View class="footer_item">
						<ImageView class="footer_item_image" image="/settings.png"></ImageView>
						<Label textid="index_settings" class="footer_item_text"></Label>
					</View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>
